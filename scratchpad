# 
# To install and use acme.sh to replace certbot:
curl https://get.acme.sh | sh
# the above installs in ~/.acme.sh/ ; creates and alias ; creates daily cron job to check for cert renewal
# needs socat:
yum install socat -y
# Update account email:
acme.sh --update-account --accountemail tony@mulini.org
# Standalone cert request:
acme.sh --issue --standalone -k 4096  \
    --key-file /etc/letsencrypt/live/mailhub.mulini.net/privkey.pem \
    --fullchain-file /etc/letsencrypt/live/mailhub.mulini.net/fullchain.pem \
    -d mailhub.mulini.net


cp mailhub.mulini.net.cer /etc/letsencrypt/live/mailhub.mulini.net/cert.pem
cp ca.cer /etc/letsencrypt/live/mailhub.mulini.net/chain.pem
# only really need these two:
cp fullchain.cer /etc/letsencrypt/live/mailhub.mulini.net/fullchain.pem
cp mailhub.mulini.net.key /etc/letsencrypt/live/mailhub.mulini.net/privkey.pem


# unrelated:  Now need to add postfix user to virusgroup (group owner of /var/run/clamd.scan)


# certbot equiv:
/bin/certbot certonly -n --agree-tos --rsa-key-size 4096 --renew-by-default -m tony@mulini.org --standalone -d mailhub.${MYDOMAIN}
